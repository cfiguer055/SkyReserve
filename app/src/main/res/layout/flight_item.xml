<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="5dp"
    android:background="@drawable/selectable_border"
    android:clickable="true"
    android:focusable="true">

    <!-- 1st Row -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/departureArrivalTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="08:00 - 14:30"
            android:textStyle="bold"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/tripCostTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$320"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/departureArrivalCityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Los Angeles - New York City"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tripTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One-Way"
            android:textSize="16sp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <!-- 2nd Row -->
     <TextView
            android:id="@+id/departureArrivalAirportTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAX - JFK"
            android:textSize="20sp"
            android:layout_alignParentStart="true"/>


    <!-- 3rd Row for flight duration -->
    <TextView
        android:id="@+id/flightDurationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6h 30m"
        android:textSize="18sp"/>

    <!-- 4th Row for airline -->
    <TextView
        android:id="@+id/airlineTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="American Airlines"
        android:textSize="18sp"/>

</LinearLayout>
