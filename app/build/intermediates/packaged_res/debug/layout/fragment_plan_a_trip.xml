<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/purple20" >

    <ImageView
        android:id="@+id/skyReserveWelcomeImage"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:src="@drawable/welcome_plan_logo"
        tools:ignore="MissingConstraints"
        />

    <TextView
        android:id="@+id/tabTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan A Trip"
        android:textColor="@color/white20"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skyReserveWelcomeImage" />

    <TextView
        android:id="@+id/tabBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your ideal destination and dates. Customize your journey with preferred airlines, seat options, and more."
        android:textColor="@color/white20"
        android:textSize="16sp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabTitle" />

</LinearLayout>