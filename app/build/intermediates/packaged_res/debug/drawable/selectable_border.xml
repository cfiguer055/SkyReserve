<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlHighlight"> <!-- This is the ripple color -->

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Replace with your desired background color -->
            <stroke
                android:width="2dp"
                android:color="#000000"/> <!-- Replace with your desired border color -->
            <corners android:radius="4dp"/> <!-- Optional: if you want rounded corners -->
        </shape>
    </item>

</ripple>
